<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- virtualkeyboard -->
	<onload condition="!Window.IsVisible(home) | !Skin.HasSetting(fTVSearch)">Setfocus(300)</onload>
	<onload condition="Window.IsVisible(home) + Skin.HasSetting(fTVSearch)">Setfocus(999)</onload>
	<include condition="!Window.IsVisible(home) | !Skin.HasSetting(fTVSearch)">DefaultKeyboard</include>
	<include condition="Window.IsVisible(home) + Skin.HasSetting(fTVSearch)">SearchKeyboard</include>
</window>